FROM python:3.10
# 不允许修改

# 设置工作目录
WORKDIR /app

# 复制依赖文件并安装依赖

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

RUN python download_model.py

# 复制项目中的所有其他文件
COPY . .

# 声明容器对外暴露的端口
EXPOSE 8000

# 容器启动时运行的命令
# 使用uvicorn启动FastAPI服务，并监听所有网络接口的8000端口
CMD ["uvicorn", "serve:app", "--host", "0.0.0.0", "--port", "8000"]